@model DIYShop.Models.ClientsModel

@{
    ViewData["Title"] = "Remove";
}

<h1>Remove client: @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h1>

<h3>Confirm to delete</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("First Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Last Name")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Company Name")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Address")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
    
    <form asp-action="RemoveConfirm" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
